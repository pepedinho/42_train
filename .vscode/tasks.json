{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang générer le fichier actif",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/5-rpn_calc/main.c", // Ajoutez le chemin vers main.c
                "${workspaceFolder}/5-rpn_calc/rpn_calc.c", // Ajoutez le chemin vers rpn_calc.c
                "-o",
                "${workspaceFolder}/5-rpn_calc/output" // Nom de l'exécutable
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}
